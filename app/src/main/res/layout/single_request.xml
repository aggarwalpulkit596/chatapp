<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/default_avatar"
        android:id="@+id/request_user_image" />

    <TextView
        android:id="@+id/request_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default Name"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="35dp"
        android:textSize="18sp"
        android:layout_toEndOf="@id/request_user_image"/>
    <Button
        android:layout_marginLeft="25dp"
        android:id="@+id/request_accept"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@color/colorAccent"
        android:layout_toEndOf="@+id/request_user_name"
        android:text="accept"/>

    <Button
        android:layout_marginLeft="5dp"
        android:id="@+id/request_decline"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/request_accept"
        android:background="@android:color/darker_gray"
        android:text="decline" />
    <Button
        android:layout_marginLeft="60dp"
        android:id="@+id/request_unfriend"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:visibility="gone"
        android:background="@color/colorAccent"
        android:layout_toEndOf="@+id/request_user_name"
        android:text="Unfriend"/>

</RelativeLayout>